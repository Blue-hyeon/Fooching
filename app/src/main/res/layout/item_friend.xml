<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/frienditem_imageview"
        android:src="@drawable/circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/frienditem_textview"
        android:text="아이디"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        app:layout_constraintStart_toEndOf="@id/frienditem_imageview"
        app:layout_constraintTop_toTopOf="@id/frienditem_imageview"
        app:layout_constraintBottom_toTopOf="@id/frienditem_state_comment"/>


    <TextView
        android:id="@+id/frienditem_state_comment"
        android:text="상태메시지"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        app:layout_constraintStart_toStartOf="@id/frienditem_textview"
        app:layout_constraintTop_toBottomOf="@id/frienditem_textview"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
