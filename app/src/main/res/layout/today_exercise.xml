<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/today_kind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동 이름"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/textgray"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/today_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="15sp"
        android:textColor="@color/maingreen"
        app:layout_constraintTop_toTopOf="@id/today_kind_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/today_kind_tv"/>

    <TextView
        android:id="@+id/today_etc1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회씩"
        android:textSize="15sp"
        android:textColor="@color/textgray"
        app:layout_constraintTop_toTopOf="@id/today_kind_tv"
        app:layout_constraintStart_toEndOf="@id/today_number_tv"
        app:layout_constraintBottom_toBottomOf="@id/today_kind_tv"/>

    <TextView
        android:id="@+id/today_set_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="15sp"
        android:textColor="@color/maingreen"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/today_kind_tv"
        app:layout_constraintStart_toEndOf="@id/today_etc1_tv"
        app:layout_constraintBottom_toBottomOf="@id/today_kind_tv"/>

    <TextView
        android:id="@+id/today_etc2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="세트"
        android:textSize="15sp"
        android:textColor="@color/textgray"
        app:layout_constraintTop_toTopOf="@id/today_kind_tv"
        app:layout_constraintStart_toEndOf="@id/today_set_tv"
        app:layout_constraintBottom_toBottomOf="@id/today_kind_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>