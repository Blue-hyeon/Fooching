<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrainerInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_btn"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"/>

        <!-- 추가한 부분-->
        <TextView
            android:id="@+id/trainer_Info_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="트레이너 등록하기"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/maingreen"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/backBtn"
            app:layout_constraintLeft_toRightOf="@id/backBtn"
            app:layout_constraintBottom_toBottomOf="@id/backBtn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/trainerinfo">
    <TextView
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:text="본인정보 입력"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/maingreen"
        />

    <EditText
        android:id="@+id/trainer_Location"
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="근무장소"
        android:backgroundTint="@color/teal_700"
        >
    </EditText>

    <EditText
        android:id="@+id/trainer_License"
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="자격증"
        android:backgroundTint="@color/teal_700"
        >
    </EditText>

    <EditText
        android:id="@+id/trainer_Award"
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="수상내역"
        android:backgroundTint="@color/teal_700">
    </EditText>


    <EditText
        android:id="@+id/trainer_Introduce"
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="자기소개"
        android:backgroundTint="@color/teal_700">
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/trainer_Info_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button"
        android:text="가입하기"
        android:textColor="@color/white"
        android:textSize="20dp"/>
</LinearLayout>
</LinearLayout>